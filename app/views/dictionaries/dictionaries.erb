
<style>

.deck-box {
    background-color: <%=rand_color%>;
}

.deck-card {
    margin-bottom: 25px; 
    border: 2px solid white; 
    border-radius: 10% / 50%; 
    display: inline-block; 
    line-height: 1; 
    height: 100px; 
    width: 200px; 
    text-align: center; 
    margin-left: 10px; 
}

</style>


<div class="deck-box" style="height: 1000px;">
        <a href="/decks/alt">
            <h1 class="deck-title"><b>Decks</b></h1>
        </a>

<div>
        <ul class="horz-options">
            <li><a onclick="call('createDictionary')">create</a> |</li>
            <li><a onclick="call('search-box')">search</a></li> |
            <li><a href="/decks/alt">listview</a></li>
        </ul> 
</div>
      <%= erb :"dictionaries/create_dictionary" %>
      <%= erb :"dictionaries/search_form_full" %>
  

<div style="text-align: center; background: <%=rand_color%>; width: 85%; margin: auto; border: <%rand_color%> solid 3px; margin-bottom: 5px;">
    <ul>
        <% @dictionaries.sort_by{|dictionary| dictionary.updated_at }.reverse.each do |dictionary| %>
           <% @dictionary = dictionary%>
           <div class="card col-sm-3 deck-card" style="background-color: <%=rand_color%>">
                <div class="card-body">
                    <span class="mb-1"><a class="deck-title" style="color: ivory; font-size: 115%;" href="/dictionary/<%=dictionary.id%>"><%=dictionary.title%></a></span>
                    <br>
                    <br>
                    <span class= "on-click" onclick="call('add-<%=dictionary.title%>-entry')"><a href="#">add</a></span><span style="color:gold;"> | </span>
                    <span><a href="/dictionary/edit/<%=dictionary.id%>">edit</a></span><span style="color:gold;"> | </span>
                    <span><a href="/topic/<%=dictionary.id%>">cards</a></span> 
                </div>
            </div>

            <div id='add-<%=dictionary.title%>-entry' style="display:none">
                   <%= erb :"dictionaries/add_entry_form"%>
            </div>
        <% end %>
    </ul>
</div>
<br>
</div>





<h1><b><%=@topic_entries[0].topic_tag.upcase%></b></h1>
<a href="/dictionary/<%=@dictionary.id%>"><h5 style="text-align: center; background-color: maroon; color: ivory; border: 2px solid black; border-radius: 5px; width: 90px; margin: auto; padding: 5px"><%=@dictionary.title%></h5></a>

<% @topic_entries.sort_by!{|entry| entry.term }%>
<% @topic_entries.each do |entry|%>
    <div>
            <h2><%=entry.term%></h2>
        <dl style="padding: 5px; background-color: white; border: 2px solid black;"> 
            <dd style="padding: 5px;">- <%=entry.info%></li>
            <dd style="padding: 5px;">- <%=entry.more_info%></li>
        <% if entry.examples[0] %>
        <dl>
            <%entry.examples.each do |example|%>
            <li><%=example.info%></li>
        <% end %>
            </ul>
        <% end %>

        </ul>
    </div>
   <% if entry.photo %>
    <div>
        <img src="/<%= entry.photo %>" alt="Where is the photo?" width="300" height= "200" style="border: 2px solid black; border-radius:15px; margin-left: 145px; margin-bottom: 10px;">
    </div>
<% end %>
    <% end %>

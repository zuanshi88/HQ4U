     
     <h1><span style="font-size: 50%;"><a href="/annuals">Annuals</a>   |   </span>Project Log<span style="font-size: 50%;">   |   <a href="/activity_log">Activity Log</a></span></h1>

    <% @default_color = 'red' %>
    <div id= project_id style="margin-top:20px;">
                <ul>       
     <%@notes.each_with_index do |note, index|%>
                    <li style="float: left; margin-bottom: 10px; margin-left: 5px;">
                        <a href="/redirect_search/note/redirect/<%=note.id%>">
                        <span class="info-emphasis" style="background-color: <%= @notes[index].updated_at.day == @notes[index - 1].updated_at.day ? @default_color : @default_color = rand_color%>";>
                            <b><%= note.updated_at.strftime('%m/%d')%></b>
                        </span>
                        <span class="comment-display" style="padding: 3px; border: solid <%=@default_color%> 2px;">
                            <% comment do %>
                                <%= @titles[note.project_id] %>
                            <% end %>
                                <%= note.comment[0..25]%>
                        </span>
                        </a>
                    </li>
                <% end %>
            </ul>
    </div>
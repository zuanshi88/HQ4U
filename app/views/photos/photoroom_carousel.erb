<div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
  <% @photos[1..-2].size.times do |i| %>
    <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="<%= i %>" class="active" aria-current="true" aria-label="Slide 1"></button>
  <% end %>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/images/<%=@photos[0].photo%>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block" style="color: white;">
        <h5><%=@photos[0].title%></h5>
        <p><%=@photos[0].description%></p>
      </div>
    </div>
  <% @photos[1..-1].each do |photo| %>
    <div class="carousel-item">
      <img src="/images/<%=photo.photo%>" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block" style="color: white;">
        <h5><%=photo.title%></h5>
        <p><%=photo.description%></p>
      </div>
    </div>
<% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
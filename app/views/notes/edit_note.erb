

<% if @book%>

        <%= erb :"books/book_nav"%>

<% else %>

        <%= erb :"projects/project_nav"%>

<% end %>

<h5 style="background: <%=rand_color%>">Edit Note:</h5>

   <form action="/note/<%=@note.id%>/<%=@note.project_id%>" method="POST">
            <input type="hidden" id="hidden" name="_method" value="patch">
            <input type="textarea" rows="3" cols="100" class="form-control" name="comment" value="<%= @note.comment %>">
            <input type="submit" value="submit">
    </form>
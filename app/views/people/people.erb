<style>

.deck-box {
    background-color: <%=rand_color%>;
}

</style>



<div class="deck-box">
        <a href="/decks/alt">
            <h1 class="deck-title"><b>People</b></h1>
        </a>

<div>
        <ul class="horz-options">
            <li><a href="/people/new" title="">new</a> |</li>
            <%# can do the same search implementation as the dictionary/decks %>
               <li><a onclick="call('search-box')">search</a></li>
        </ul> 
</div>
        <%= erb :"people/search_people" %>

</div>

<% if @message %>
     <h2> <%= @message %> </h2>
 
<% end %>

<% if @results%>
<div>
  <ul class="horz-options">
      <li style="display:inline">Search results: </li>
    <% @results.each_with_index do |acc, index|%>
      <li  style="display:inline"><a href="/people/<%=acc.id%>"><%=acc.name %></a> <%= index == @results.size - 1 ? "" : "|" %></li>
      <% end %>
  </ul>

</div>
<% end %>
          
<table class="table table-dark table-hover" style="border: solid white 3px; border-radius: 10% / 50%;">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
       <th scope="col">Zipcode</th>
    </tr>
  </thead>
  <tbody>
   <%@people = Account.all%>
    <%@people.sort_by{|person| person.name}.each do |person|%>
        
           
          <tr>
              <td> <a href="/people/<%=person.id%>" style="color: silver"><%= person.name %></a></td>
              <td><%= person.street_address %></td>
              <td><%= person.city %></td>
              <td><%= person.state %></td>
              <td><%= person.zipcode %></td>
          </tr>
           
    <% end %>
  </tbody>
</table>

          


</div>
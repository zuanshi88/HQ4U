


   <div class="profile">

    <h1> Edit -- <%= @person.name %> --

    </h1>
    <div class="position-relative"> 
        <div class="position-relative start-50">
            <form action="/people/<%=params[:id] %>" method="post">
                    <input id="hidden" type="hidden" name="_method" value="delete">
                    <input type="submit" value="delete" onclick="clicked(event)">
            </form> 
            <img src="/images/<%=@person.photo%>" alt="Where's the photo?" width="225" height= "150">
        </div>
    </div>  
    <div class="profile-nav">


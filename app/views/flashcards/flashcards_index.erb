

<h1>FLASHCARDS</h1>

<% if @message %>
<h2><%= @message %> </h2>
<% end %>


<form method="POST" action="/flashcards/session">
 

<select class="form-select form-select-sm" aria-label=".form-select-sm example" name="number">
  <option selected>Number of cards</option>
  <option value="10">10</option>
  <option value="50">50</option>
  <option value="100">100</option>
</select>

<select class="form-select form-select-sm" aria-label=".form-select-sm example" name="difficulty">
  <option selected>Difficulty</option>
  <option value="all">All</option>
  <option value="greater">greater than 5</option>
  <option value="less">less than 5</option>
</select>

<select class="form-select form-select-sm" aria-label=".form-select-sm example" name="views">
  <option selected>Views</option>
  <option value="all">All</option>
  <option value="greater">greater than 5</option>
  <option value="less">less than 5</option>
</select>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
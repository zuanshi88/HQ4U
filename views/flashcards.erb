
<% @color_array=[" #624d60", " #e7ee8f", " #878db5", " #b335a6", " #25a5da", " #919dc5", " #44fee3", " #384f14", " #39ced9", " #fd0fbb", " #b4d36b", " #0b84cc", " #072f47", " #9f600c", " #6246a7", " #d9b8ab", " #7a8d21", " #688fae", " #44dd7d", " #9c33f6", " #89038b", " #c85ce1", " #2b6e90", " #136888", " #52ebeb", " #99fc8c", " #29d441", " #98bed7", " #246c06", " #0e8996", " #e37d26", " #2d1521", " #587900", " #44d76b", " #3095b2", " #b58e54", " #4c144a", " #c5ac66", " #62c734", " #dbfa4c", " #3ea511", " #0361b8", " #484346", " #0121e5", " #660b0c", " #d6c861", " #64ae22", " #c4b645", " #56310c", " #dfce8e", " #b60762", " #56cd8e", " #482c95", " #6e352c", " #5c4d98", " #f0f870", " #b8d191", " #9ab838", " #6c7dea", " #5e109b", " #aebd16", " #c941c9", " #872b3b", " #2392c5"]%>

<div>
<h1><a href="/topics"><label for="topics">TOPICS</label></a></h1>
        <h2 style="margin:auto; width:50%; text-align: center;" onclick="call('createTopic')">create</h2>
    <div id="createTopic" style="display:none; margin:auto; width:15%;" >
        <form method= "POST" action="/topic/create" style="margin-top: 5px;">
            <input type="text" name= "title">
            <input type="submit" value= "submit" style="float:right;">
        </form>
    </div>
</div>
<div>
    <ul>
        <% @topics.each do |topic| %>
            <li style="margin-bottom: 20px; border: 2px solid black; width: 225px; text-align: center; padding: 5px; background-color: <%=@color_array[rand(63)]%>;"><a href="/topic/<%=topic.id%>"> <b style="font-size: 110%"><%=topic.title%></b></a>  (<%=topic.flashcards.length%>) 
                <span onclick="call('addCard')">add</span> | <span><a href="/topic/edit/<%=topic.id%>">edit</a></span>
            <div id='addCard' style="display:none">
                <label for="flashcards"></label>
                    <form action="/topic/<%=topic.id%>/flashcard/create" method= "POST" style="margin-top: 5px;">
                        <input type="text" name= "front" placeholder="front">
                        <input type="text" name= "back" placeholder="back">
                        <input type="hidden" name= "views" value= "0">
                        <input type="hidden" name= "difficulty" value= "10">
                        <input type="submit" value= "submit">
                    </form>
            </div>
            </li>
        <% end %>     
        </ul>
</div>

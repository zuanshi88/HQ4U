<div>
<h1 style="background-color:red; border: 3px solid black; width: 225px; margin: auto; margin-bottom: 10px; padding: 5px; font-weight: bold; ">My People</h1>
</div>
            <div style="text-align: center;">
           <a href="/people/new" title="">new</a> | <a href="/activities" title="">action</a> | <a href="/">home</a>
             </div>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Adress</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
       <th scope="col">Zipcode</th>
    </tr>
  </thead>
  <tbody>
   <%@people = Account.all%>
    <%@people.sort_by{|person| person.name}.each do |person|%>
        
           
          <tr>
              <td> <a href="/people/<%=person.id%>" style="color: silver"><%= person.name %></a></td>
              <td><%= person.street_address %></td>
              <td><%= person.city %></td>
              <td><%= person.state %></td>
              <td><%= person.zipcode %></td>
          </tr>
           
    <% end %>
  </tbody>
</table>

          


</div>